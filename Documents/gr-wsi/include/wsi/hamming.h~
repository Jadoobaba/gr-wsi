#ifndef INCLUDED_WSI_HAMMING_H
#define INCLUDED_WSI_HAMMING_H

#include <wsi/api.h>
#include <gnuradio/block.h>

namespace gr {
  namespace wsi {

    /*!
     * \brief <+description of block+>
     * \ingroup wsi
     *
     */
    class WSI_API hamming : virtual public gr::block
    {
     public:
      typedef boost::shared_ptr<hamming> sptr;

      /*!
       * \brief Return a shared_ptr to a new instance of wsi::hamming.
       *
       * To avoid accidental use of raw pointers, wsi::hamming's
       * constructor is in a private implementation
       * class. wsi::hamming::make is the public interface for
       * creating new instances.
       */
      static sptr make(m);
    };

  } // namespace wsi
} // namespace gr

#endif /* INCLUDED_WSI_HAMMING_H */

